[user]
  name = "Anton Hedstr√∂m"
  email = antonhedstrom@gmail.com

[github]
  user = antonhedstrom

[branch]
  autosetupmerge = true

[branch "master"]
  remote = origin
  merge = refs/heads/master

[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

; Highlight whitespace in diffs
[color]
  ui = true

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  autocrlf = input

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff

  # View abbreviated SHA, auhtor and description of the latest commits
  lg = log  --max-count=10 --format="%C(auto)*%h... %C(green)%<(16,trunc)%an%C(reset) : %s"

  # https://github.com/mathiasbynens/dotfiles/blob/master/.gitconfig
  # Show verbose output about tags, branches or remotes
  tags = tag -l
  branches = branch -a
  remotes = remote -v
  # View the current working tree status using the short format
  s = status -s

[merge]
  tool = opendiff

[push]
  default = simple
